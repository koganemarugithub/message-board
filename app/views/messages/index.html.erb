<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(Message.new) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <!--名前入力フォーム-->
  <!--メモ：form-groupはrowの役割もあるためレイアウト可能-->
    <div class="form-group">
      
      <div class="name_input">
        <%= f.label :name , '名前:', class: 'col-sm-1 control-label' %>
        <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
        <div class="col-sm-11">
        <%= f.text_field :name, class: 'form-control' %>
        </div>
      </div>
    <br/>
   <!--内容入力フォーム-->
      <div class="content_input">
        <%= f.label :name , '内容:', class: 'col-sm-1 control-label' %>
        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        <div class="col-sm-11">
        <%= f.text_area :body, class: 'form-control' , rows: 10 %>
        </div>
      </div>
  </div>
  <%= f.submit class: "btn btn-sm btn-primary" %>

<% end %>
  