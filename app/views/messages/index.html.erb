<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="name label">
        <%= message.name %></span>
            <!--ageの表示-->
      <span class="age label">
        <%= message.age %>
         歳 </span>
      <span class="label-body">
      <%= message.body %>


    (<%= link_to "編集" , edit_message_path(message) %>
     <%= link_to "削除" , message , method: :delete, data: { confirm: '削除してもよろしいですか？' } %>
    )
      <br>
    <% end %>
  </div>
</div>

<% #部分テンプレートを読み込んでいる %>
<%= render 'form' %>