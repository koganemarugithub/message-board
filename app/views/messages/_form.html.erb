<% #アラート機能 %>
<%= form_for(@message) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>
 
  <!--名前フーム-->
  <div class="form-group">
    <div class: 'control-label'>
      <span class="glyphicon glyphicon-user"></span>
      <%= f.label :name,'名前:' %>
    </div>
    <%= f.text_field :name, placeholder: '必須入力', size: "50", class:"form-control"%>
  </div>

   <!--年齢フーム-->
  <div class="form-group">
    <div class: 'control-label'>
      <span class="glyphicon glyphicon-time"></span>
      <%= f.label :age,'年齢:' %>
    </div>
    <%= f.text_field :age, placeholder: '必須入力_数値のみ', size: "50", class:"form-control" %>
  </div>

  <!--内容フーム-->
  
  <div class="form-group">
    <div class: 'control-label'>
      <span class="glyphicon glyphicon-pencil"></span>
      <%= f.label :body,'内容:' %>
    </div>
    <%= f.text_area :body, placeholder: '必須入力_30文字以内', size: "50x3", class:"form-control"%>
  </div>
  
  <!--create message-->
  <div class="form-group">
    <%= f.submit '反映する',  class: "btn btn-sm btn-primary" %>
  </div>
<% end %>